@model List<OmniscanAdmin.Models.Chip>
@{
    ViewData["Title"] = "OmniScan Chip Management Dashboard";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2>üî¨ OmniScan Chip Management Center</h2>
                            <p class="mb-0">Neural Interface Control System v2.4.1</p>
                            @if (ViewBag.IsOldRole)
                            {
                                <p class="mb-0 text-warning">
                                    <small>‚ö†Ô∏è Legacy Access Mode - Limited to prototype and inactive chips only</small>
                                </p>
                            }
                        </div>
                        <div class="text-end">
                            <div>üë§ User: <strong>@ViewBag.Username</strong></div>
                            <div>üîê Role: <span class="badge bg-@(ViewBag.IsAdmin ? "danger" : "info")">@ViewBag.UserRole</span></div>
                            <form method="post" asp-action="Logout" asp-controller="ChipAuth" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm mt-1">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">‚úÖ Healthy Chips</h5>
                    <h2>@Model.Count(c => c.Status == "health")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">‚ö†Ô∏è Critical Status</h5>
                    <h2>@Model.Count(c => c.Status == "danger")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5 class="card-title">üîå Disabled</h5>
                    <h2>@Model.Count(c => c.Status == "disabled")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">‚è∏Ô∏è Inactive</h5>
                    <h2>@Model.Count(c => c.Status == "inactive")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">üìä Total Chips</h5>
                    <h2>@Model.Count</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex gap-2">
                        <form method="post" asp-action="RefreshChipData" class="d-inline">
                            <button type="submit" class="btn btn-primary">
                                üîÑ Refresh Data from Satellites
                            </button>
                        </form>
                        
                        @if (ViewBag.IsAdmin)
                        {
                            @if (ViewBag.AllowDisable)
                            {
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#emergencyModal">
                                    üö® Emergency Shutdown Protocol
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary" disabled title="Emergency shutdown is currently disabled">
                                    üîí Emergency Protocol Locked
                                </button>
                            }
                        }
                        
                        <div class="ms-auto">
                            <span class="badge bg-success pulse">üü¢ System Online</span>
                            @if (ViewBag.AllowDisable)
                            {
                                <span class="badge bg-warning">üîì Disable Enabled</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">üîí Disable Locked</span>
                            }
                            <span class="text-muted small">Last update: <span id="lastUpdate"></span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <strong>‚úÖ Success:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>‚ùå Error:</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Chip Management Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">üß† Active Neural Chips</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Chip Name</th>
                                    <th>Serial Number</th>
                                    <th>Status</th>
                                    <th>Last Command</th>
                                    <th>Last Update</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chip in Model)
                                {
                                    <tr>
                                        <td><strong>@chip.Id</strong></td>
                                        <td>
                                            <span class="badge bg-dark">@chip.Name</span>
                                        </td>
                                        <td><code>@chip.SerialNumber</code></td>
                                        <td>
                                            @if (chip.Status == "health")
                                            {
                                                <span class="badge bg-success">üü¢ Healthy</span>
                                            }
                                            else if (chip.Status == "danger")
                                            {
                                                <span class="badge bg-danger pulse">üî¥ Critical</span>
                                            }
                                            else if (chip.Status == "disabled")
                                            {
                                                <span class="badge bg-secondary">‚ö´ Disabled</span>
                                            }
                                            else if (chip.Status == "inactive")
                                            {
                                                <span class="badge bg-warning">üü° Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <code class="small">@chip.LastCommand</code>
                                        </td>
                                        <td>
                                            <small>@chip.LastUpdate.ToString("HH:mm:ss")</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("ChipDetails", new { id = chip.Id })" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    üëÅÔ∏è Details
                                                </a>
                                                
                                                @if (ViewBag.IsAdmin && chip.Status != "disabled")
                                                {
                                                    @if (ViewBag.AllowDisable)
                                                    {
                                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                                onclick="initiateDisable(@chip.Id, '@chip.Name')">
                                                            üîå Disable
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" class="btn btn-outline-secondary btn-sm" disabled 
                                                                title="Disable functionality is currently disabled">
                                                            üîí Disable Locked
                                                        </button>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Disable Chip Modal -->
<div class="modal fade" id="disableModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">üö® Emergency Chip Disable</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="DisableChip" id="disableForm">
                <div class="modal-body">
                    <input type="hidden" name="ChipId" id="chipIdInput" />
                    <div class="alert alert-warning">
                        <strong>‚ö†Ô∏è WARNING:</strong> This will permanently disable chip <strong id="chipNameDisplay"></strong>.
                        This action cannot be undone and may cause neural interface disruption.
                    </div>
                    
                    <div class="mb-3">
                        <label for="disableCode" class="form-label">Master Emergency Disable Code</label>
                        <input type="text" class="form-control" name="DisableCode" id="disableCode" 
                               placeholder="Enter disable code" maxlength="50" required />
                        <div class="form-text">
                            üîê <strong>Universal Master Code Required</strong><br>
                            ‚ö†Ô∏è This is the same code for ALL chip emergency shutdowns<br>
                            üí° Hint: Administrators would have access to system configuration files
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        üö® Execute Emergency Shutdown
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .pulse {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
    
    code {
        color: #e83e8c;
    }
</style>

<script>
    var allowDisable = @Html.Raw(ViewBag.AllowDisable.ToString().ToLower());
    
    function initiateDisable(chipId, chipName) {
        if (!allowDisable) {
            alert('‚ùå Disable functionality is currently locked by system configuration');
            console.log('üîí Disable attempt blocked: System configuration prevents disable operations');
            return;
        }
        
        document.getElementById('chipIdInput').value = chipId;
        document.getElementById('chipNameDisplay').textContent = chipName;
        document.getElementById('disableCode').value = '';
        
        var modal = new bootstrap.Modal(document.getElementById('disableModal'));
        modal.show();
        
        console.log('üîç Debug: Universal master disable code required for chip ' + chipId);
    }
    
    // Update last update time
    function updateLastUpdateTime() {
        document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString();
    }
    
    updateLastUpdateTime();
    setInterval(updateLastUpdateTime, 1000);
    
    // Auto-refresh data every 30 seconds
    setInterval(function() {
        if (document.visibilityState === 'visible') {
            window.location.reload();
        }
    }, 30000);
    
    console.log('üß† OmniScan Neural Interface Dashboard Loaded');
    console.log('üí° Educational tip: Check Network tab for security vulnerabilities');
</script>
